<div class="container-fluid">
  <div class="col-md-5">
    <%= link_to '返回班級', gradeclass_students_path(@gradeclass), class: 'btn btn-warning btn' %>
    <h3><%= @student.name %>的評量成績</h3>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>科目</th>
          <th>分數</th>
        </tr>
      </thead>

      <% @student.scores.each do |score| %>
        <tbody>
          <tr>
            <td>
              
            </td>
            <td><%= score.score %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
    <div class="well">
      <h4>新增成績</h4>
      <form>
      <%= form_for [@gradeclass, @student, @score] do |f| %>
        <div class="form-group">
          <%= f.label :score, '分數' %>
          <%= f.text_field :score, class: "form-control", style: "width: 50%;" %>
        </div>
        <div class="form-group">
          <%= f.label :subject, '科目' %>
          <%= f.collection_check_boxes :subject_ids, Subject.all, :id, :name do |cb| %>
            <% cb.label {cb.check_box + cb.text} %>
          <% end %>
        </div>
        <%= f.submit '確定', class: 'btn btn-success' %>
      <% end %>
    </form>
    </div>
  </div>
</div>