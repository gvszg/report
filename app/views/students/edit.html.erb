<div class="container-fluid">
  <div class="col-md-8">
    <h3>編輯學生資料</h3>
    <form>
      <%= form_for [@grade, @student, @score] do |f| %>
        <div class="form-group">  
          <%= f.label :number, '座號' %>
          <%= f.text_field :number, class: 'form-control', style: 'width: 30%;' %>
        </div>
        <div class="form-group">
          <%= f.label :name, '姓名' %>
          <%= f.text_field :name, class: 'form-control', style: 'width: 30%;' %>
        </div>
        <div class="form-group">
          <%= f.label :subject, '科目' %>
          <%= f.collection_check_boxes :subject_ids, Subject.all, :id, :name do |cb| %>
            <% cb.label {cb.check_box + cb.text} %>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.submit '編輯學生', class: 'btn btn-primary' %>
           <%= link_to '返回班級', grade_students_path(@grade), class: 'btn btn-warning btn' %>
        </div>  
      <% end %>
    </form>
  </div>
</div>