<div class="container-fluid">
  <div class="col-md-8">
    <h3>新增科目</h3>
    <form>
      <%= form_for @subject do |f| %>
        <div class="form-group">  
          <%= f.label :name, '科目' %>
          <%= f.text_field :name, class: 'form-control', style: 'width: 30%;' %>
        </div>
        <div class="form-group">
          <%= f.submit '新增科目', class: 'btn btn-primary' %>
        </div>  
      <% end %>
    </form>
  </div>
</div>